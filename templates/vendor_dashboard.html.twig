{% extends "base.html.twig" %}
{% block title %}Dashboard - Web Store {% endblock %}
{% block body %}
<div class="content">
    <h1>Dashboard</h1>
    <div>
        <table class="dashboard">
            <tr>
                <th class="dashboard">Total products</th>
            </tr>
            <tr>
                <td class="dashboard">{{ totalProducts }}</td>
            </tr>
        </table>
        <table class="dashboard">
            <tr>
                <th class="dashboard">Total orders</th>
            </tr>
            <tr>
                <td class="dashboard">{{ totalOrders }}</td>
            </tr>
        </table>
        <table class="dashboard">
            <tr>
                <th class="dashboard">New orders</th>
            </tr>
            <tr>
                <td class="dashboard">{{ newOrders }}</td>
            </tr>
        </table>
    </div>
</div>
{% endblock %}